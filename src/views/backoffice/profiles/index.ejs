<%- include('../includes/head.ejs') %> <%-
include('../includes/navigation.ejs')%>
<script src="/js/sweetalert2.all.min.js"></script>
<input
  type="hidden"
  id="text-alert"
  value="<%= translate(flashMessage[0]) %>"
/>
<div class="container-fluid col-6">
  <div class="card shadow">
    <div class="card-header py-3">
      <div class="d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">
          <%= translate('profile') %>
        </h6>
        <a class="btn btn-info btn-sm text-right" href="/backoffice/profile/form"><%= translate('edit') %></a>
      </div>
    </div>
    <div class="card-body">
      <form action="/backoffice/language" method="POST" id="form">
        <div class="col-12">
          <div class="row">
            <div class="col-3">
              <label for="" class="font-weight-bold"><%= translate('username') %></label>
            </div>
            <div class="col-6">
              <label for=""><%= result.username %></label>
            </div>
          </div>
          <div class="row">
            <div class="col-3">
              <label for="" class="font-weight-bold"><%= translate('role') %></label>
            </div>
            <div class="col-6">
              <label for=""><%= result.roles %></label>
            </div>
          </div>
          <div class="row">
            <div class="col-3">
              <label for="" class="font-weight-bold"><%= translate('email') %></label>
            </div>
            <div class="col-6">
              <label for=""><%= result.email %></label>
            </div>
          </div>
          <div class="row">
            <div class="col-3">
              <label for="" class="font-weight-bold"><%= translate('photo profile') %></label>
            </div>
            <div class="col-6">
                <img src="/img/users/<%= result.image %>" alt="profile" width="150">
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../includes/end.ejs') %>
