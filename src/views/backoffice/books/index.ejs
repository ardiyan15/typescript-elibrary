<%- include('../includes/head.ejs') %> <%-
include('../includes/navigation.ejs')%>
<script src="/js/sweetalert2.all.min.js"></script>
<div class="container-fluid">
  <a href="/backoffice/books/form" class="btn btn-primary btn-sm mb-3 rounded"
    >Add Book</a
  >
  <div class="card shadow">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Master Book</h6>
    </div>
    <div class="card-body">
      <input type="hidden" id="text-alert" value="<%= flashMessage[0] %>" />
      <table class="table table-bordered dataTable" id="dataTable">
        <thead>
          <tr>
            <th class="text-center">No</th>
            <th class="text-center">Title</th>
            <th class="text-center">Author</th>
            <th class="text-center">Image</th>
            <th class="text-center">Created Date</th>
            <th class="text-center">Updated Date</th>
            <th class="text-center">Action</th>
          </tr>
        </thead>
        <tbody>
          <% let i = 1; %> <% books.forEach(book => { %>
          <tr>
            <td class="text-center"><%= i++ %></td>
            <td class="text-center"><%= book.title %></td>
            <td class="text-center"><%= book.author %></td>
            <td class="text-center">
              <img
                width="80"
                height="30"
                src="/<%= book.image %>"
                alt="<%= book.title %>"
              />
            </td>
            <td class="text-center"><%= book.createdAt %></td>
            <td class="text-center"><%= book.updatedAt %></td>
            <td class="text-center">
              <div class="row">
                <div class="col-md-6 text-right">
                  <a
                    href="/backoffice/books/<%= encrypt(book.id.toString(), book.id.toString()) %>"
                    class="text-center btn btn-info btn-sm rounded"
                    >Edit
                  </a>
                </div>
                <div class="col-md-6 text-left">
                  <form method="POST" action="/backoffice/bookdelete">
                    <input
                      type="hidden"
                      value="<%= encrypt(book.id.toString()) %>"
                      name="bookId"
                      id="bookId"
                    />
                    <button
                      class="text-center btn btn-danger btn-sm rounded delete-confirm"
                    >
                      Delete
                    </button>
                  </form>
                </div>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%- include('../includes/end.ejs') %> <% if(flashMessage.length > 0) { %>
<script>
  let message = $("#text-alert").val();
  Swal.fire("Success!", message, "success");
</script>
<% } %>
<script>
  $(".delete-confirm").on("click", function (e) {
    e.preventDefault();
    Swal.fire({
      title: "Delete Data",
      icon: "question",
      iconHtml: "?",
      confirmButtonText: "Yes",
      cancelButtonText: "No",
      showCancelButton: true,
      showCloseButton: true,
    }).then(({ isConfirmed }) => {
      if (isConfirmed) {
        $(this).closest("form").submit();
      }
    });
  });
</script>
