{
  "compilerOptions": {
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@models/*": ["./src/models/*"],
      "@types/*": ["src/customTypes/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@validators/*": ["./src/validators/*"],
      "@routes/*": ["./src/routes/*"],
      "@generals/*": ["src/generals/*"],
      "@middleware/*": ["src/middleware/*"],
      "@customTypes/*": ["src/customTypes/*"],
      "@helper/*": ["src/helper/*"]
    },
    "typeRoots": ["./node_modules/@types", "src/customTypes"]
  },
  "include": ["src/**/*"]
}
